<% if(@video) %>
  <%= form_for [@video, @comment] do |f| %>
    Comment: <%= f.text_field :description %><br>

    <%= f.submit %>
  <% end %>  

  <%= link_to 'delete', [@video, @comment],method: :delete %>  

<% elsif (@playlist) %>
  <%= form_for [@playlist, @comment] do |f| %>
    Comment: <%= f.text_field :description %><br>

    <%= f.submit %>
  <% end %>

  <%= link_to 'delete', [@playlist, @comment], method: :delete %>
<% end %>  